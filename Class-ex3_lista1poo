using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace AreaTriangulo
{
    internal class ClassAreaTriangulo
    {
        internal class Multi
        {
            #region Atributos
            private int b;
            private int a;
            private int resultado;
            #endregion

            #region MetodosInterface
            public void setB(int p) 
            {
                b = p;
            }
            public void setA(int o)  
            {
                a = o;
            }
            public int getB()
            {
                return b;
            }
            public int getA()
            {
                return a;
            }
            public int getresultado()
            {
                return resultado;
            }
            #endregion
            #region MÃ©todo funcional
            public void calcular()
            {
                resultado = a * b /2;
            }
            #endregion
        }
        }
    }
